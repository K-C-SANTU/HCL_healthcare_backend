              "host": ["hcl-healthcare-backend", "onrender", "com"],
              "path": ["api", "shifts", "date-range"],
              "query": [
                {
                  "key": "startDate",
                  "value": "2024-03-20"
                },
                {
                  "key": "endDate",
                  "value": "2024-03-27"
                }
              ]
            },
            "description": "Get shifts within a date range"
          }
        },
