{
  "watch": [
    "server.js",
    "controllers/",
    "routes/",
    "middleware/",
    "models/",
    "config/",
    "seeders/"
  ],
  "ignore": [
    "node_modules/",
    "*.test.js",
    "*.spec.js",
    "logs/",
    "uploads/",
    ".git/",
    "README.md",
    "*.md"
  ],
  "ext": "js,json,env",
  "env": {
    "NODE_ENV": "development"
  },
  "delay": 1000,
  "verbose": true,
  "restartable": "rs",
  "colours": true
}
